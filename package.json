{
  "name": "@edtr-io/edtr-io-workspace",
  "version": "0.0.0",
  "license": "MIT",
  "author": "edtr.io Consortium",
  "repository": "edtr-io/edtr-io",
  "scripts": {
    "start": "lerna run --stream start",
    "test": "jest",
    "prebuild": "yarn _exec \"rimraf dist\"",
    "build": "npm-run-all build:*",
    "build:babel": "yarn _exec --ignore @edtr-io/demo \"babel src --extensions \\\".ts,.tsx\\\" --out-dir dist --root-mode upward --source-maps\"",
    "build:tsc": "yarn _exec --ignore @edtr-io/demo \"tsc --build src\"",
    "format": "npm-run-all format:*",
    "format:eslint": "yarn _eslint --fix",
    "format:prettier": "yarn _prettier --write",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "yarn _eslint",
    "lint:prettier": "yarn _prettier --check",
    "lint:tsc": "tsc --noEmit",
    "_exec": "lerna exec --stream --no-bail",
    "_eslint": "eslint \"{packages/*/{{__stories__,__tests__,src}/**/*,*},*}.{js,jsx,ts,tsx}\"",
    "_prettier": "prettier \"{packages/*/{{__stories__,__tests__,src}/**/*,*},*}.{js,jsx,ts,tsx,json,md,yaml,yml}\""
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@types/jest": "^23.0.0",
    "@typescript-eslint/eslint-plugin": "^1.0.0",
    "@typescript-eslint/parser": "^1.0.0",
    "eslint": "^5.0.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.0.0",
    "husky": "^1.0.0",
    "jest": "^24.0.0",
    "lerna": "^3.0.0",
    "lint-staged": "^8.0.0",
    "npm-run-all": "^4.0.0",
    "prettier": "^1.0.0",
    "react-testing-library": "^5.0.0",
    "rimraf": "^2.0.0",
    "typescript": "^3.0.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
