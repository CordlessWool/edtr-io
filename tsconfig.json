{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",

    "baseUrl": "packages",
    "paths": {
      "@edtr-io/core": ["core/src"],
      "@edtr-io/ui": ["ui/src"],
      "@edtr-io/plugin-anchor": ["plugin-anchor/src"],
      "@edtr-io/plugin-spoiler": ["plugin-spoiler/src"],
      "@edtr-io/plugin-text": ["plugin-text/src"]
    }
  }
}
